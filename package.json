  "bugs": {
    "url": "https://github.com/Pratap22/unit-test-express-api-starter/issues"
  },
  "homepage": "https://github.com/Pratap22/unit-test-express-api-starter#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongoose": "^8.5.1"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "mocha": "^10.7.0",
    "nodemon": "^3.1.4",
    "nyc": "^17.0.0",
    "rewire": "^7.0.0",
    "sinon": "^18.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.0.0"
